{
  "name": ".lazyPaste: Copy/Paste made easy",
  "description": "Easy COPY/PASTE for social network and personalized fields to store your favorite texts. Alt + C opens the extension pop-up.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "background": {
    "service_worker": "/ext/background.js"
  },

  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "64": "images/icon64.png"
    }
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+C"
      }
    }
  },

  "icons": {
    "16": "images/icon16.png",
    "64": "images/icon64.png"
  }
}
